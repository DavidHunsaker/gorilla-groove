<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlSymmetry,HardcodedText">

    <ImageView
        android:id="@+id/itemCheckmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="Checkmark"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/ggPrimary"
        android:src="@drawable/ic_check_black_24dp" />

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:textAlignment="textStart"
        android:textColor="@color/foreground"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemCheckmark"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Best Evar Playlist" />

</androidx.constraintlayout.widget.ConstraintLayout>
