<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/usersIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:src="@drawable/ic_users_24"
        app:layout_constraintBottom_toBottomOf="@id/usersText"
        app:layout_constraintEnd_toStartOf="@id/usersText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/usersText"
        app:tint="@color/foreground" />

    <Button
        android:id="@+id/usersText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:text="Users"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/usersIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/usersDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/logoutDivider"
        app:layout_constraintTop_toBottomOf="@id/usersText" />

    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:src="@drawable/ic_settings_24"
        app:layout_constraintBottom_toBottomOf="@id/settingsText"
        app:layout_constraintEnd_toStartOf="@id/settingsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/settingsText"
        app:tint="@color/foreground" />

    <Button
        android:id="@+id/settingsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:text="Settings"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/settingsIcon"
        app:layout_constraintTop_toBottomOf="@id/usersDivider" />

    <View
        android:id="@+id/settingsDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/logoutDivider"
        app:layout_constraintTop_toBottomOf="@id/settingsText" />

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:src="@drawable/ic_warning_amber_24px"
        app:layout_constraintBottom_toBottomOf="@id/menuText"
        app:layout_constraintEnd_toStartOf="@id/menuText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/menuText"
        app:tint="@color/foreground" />

    <Button
        android:id="@+id/menuText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:text="Problem Report"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/menuIcon"
        app:layout_constraintTop_toBottomOf="@id/settingsDivider" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/logoutDivider"
        app:layout_constraintTop_toBottomOf="@id/menuText" />

    <ImageView
        android:id="@+id/logoutIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:src="@drawable/ic_logout_24px"
        app:layout_constraintBottom_toBottomOf="@id/logoutButton"
        app:layout_constraintEnd_toStartOf="@id/logoutButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/logoutButton"
        app:tint="@color/foreground" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:text="Logout"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/logoutIcon"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <View
        android:id="@+id/logoutDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/logoutButton"
        app:layout_constraintTop_toBottomOf="@id/logoutButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
